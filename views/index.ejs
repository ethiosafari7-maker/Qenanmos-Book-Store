        /* ·ã®·çç·àà·åã ·àù·àç·ä≠·âµ (üîç) */
        .search-icon { position: absolute; right: 20px; top: 50%; transform: translateY(-50%); font-size: 20px; color: #888; pointer-events: none; }

        .book-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 25px; width: 90%; max-width: 1200px; padding-bottom: 50px; }
        .book-card { background: white; padding: 25px; border-radius: 20px; box-shadow: 0 10px 25px rgba(0,0,0,0.05); text-align: center; transition: 0.3s; border: 1px solid #eee; }
        .book-title { font-size: 1.2rem; font-weight: bold; margin: 10px 0; color: #333; }
        .download-btn { display: inline-block; background-color: var(--primary-color); color: white; padding: 12px 25px; border-radius: 30px; text-decoration: none; font-weight: bold; font-size: 0.9rem; }
        .no-results { display: none; color: #999; margin-top: 50px; text-align: center; width: 100%; }
    </style>
</head>
<body>

    <header>
        <h1>üìö Qenanmos Book Store</h1>
