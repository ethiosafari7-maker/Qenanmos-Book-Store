    <div class="book-grid" id="bookGrid">
        <% if (books && books.length > 0) { %>
            <% books.forEach(book => { %>
                <div class="book-card">
                    <div style="font-size: 40px;">üìÑ</div>
                    <div class="book-title"><%= book.title %></div>
                    <div style="color: #777; margin-bottom: 15px;">üë§ Qenanmos Store</div>
                    <a href="https://t.me/QenanmosBookStore_bot?start=<%= book.fileId %>" class="download-btn">üì• ·â†·â¥·àå·åç·à´·àù ·ä†·ãç·à≠·ãµ</a>
                </div>
