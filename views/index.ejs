        .search-container { width: 90%; max-width: 600px; margin: 30px 0; position: relative; }
        .search-box { width: 100%; padding: 15px 50px 15px 25px; border-radius: 50px; border: 2px solid #ddd; font-size: 16px; outline: none; transition: 0.3s; box-sizing: border-box; }
